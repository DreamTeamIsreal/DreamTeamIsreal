# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/dreamteam_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dreamteam_db
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Security Keys (CRITICAL - Generate strong keys for production)
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys for Data Security (CRITICAL)
ENCRYPTION_KEY=your_32_byte_encryption_key_hex_encoded
ENCRYPTION_IV_SIZE=16
HMAC_SECRET=your_hmac_secret_for_integrity_checks

# Real vs Fake Data Obfuscation (CRITICAL SECURITY FEATURE)
RECORD_INTEGRITY_SECRET=your_secret_for_real_fake_identification
FAKE_RECORDS_MULTIPLIER=5
FAKE_DATA_GENERATION_SEED=your_deterministic_seed_for_fake_data

# MFA Configuration
MFA_SERVICE_NAME=DreamTeamIsrael
MFA_ISSUER=DreamTeamIsrael

# SMS Gateway (Twilio example)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_phone

# File Storage (AWS S3 example)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dreamteam-documents
AWS_S3_PUBLIC_URL=https://your-bucket.s3.amazonaws.com

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AI/ML Service for Text Similarity (Optional)
OPENAI_API_KEY=your_openai_api_key
COHERE_API_KEY=your_cohere_api_key